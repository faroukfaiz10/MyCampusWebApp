<% include partials/header %>

<div class="container">
		<div class="d-flex bd-highlight mb-3">
			<div class="mr-auto p-2">
				<h1>Liste des colis</h1>
			</div>
			<div class="my-auto p-auto mr-5">
				<button type="button" data-toggle="modal" data-target="#exampleModal" class="m-auto btn btn-secondary">
					Ajouter un colis
				</button>
			</div>
		</div>
		<div class="table-responsive">
			<table class="table table-hover">
				<thead class="bg-secondary text-light">
					<tr>
					  <th scope="col">Id</th>
					  <th scope="col">Nom</th>
					  <th scope="col">Prénom</th>
					  <th scope="col">Email</th>
						<th scope="col">Expéditeur</th>
						<th scope="col">Statut</th>
						<th scope="col"></th>
					</tr>
				</thead>
				<tbody>
                    <% packagesList.forEach(function(package){ %>
                        <tr>
                            <th scope="row"><%=package.colis_id %></th>
                            <td><%=package.last_name %></td>
                            <td><%=package.first_name %></td>
                            <td><%=package.email %></td>
														<td><%=package.sender %></td>
														<td class="text-danger"><%=package.status %></td>
														<td><i class="fas fa-pen text-secondary mr-3"></i><i class="fas fa-trash-alt text-secondary"></i></td>
                        </tr>
                    <%}); %>
				</tbody>
			</table>
		</div>
		<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLabel">Ajouter un colis</h5>
						<button type="button" class="close" data-dismiss="modal">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<form action="/packages" method="POST">
						<div class="modal-body">
								<div class="form-group">
									<label for="email">Adresse email</label>
									<input type="email" class="form-control" id="email" placeholder="prenom.nom@imt-atlantique.net" name="email">
								</div>
								<div class="form-group">
									<label for="sender">Expéditeur</label>
									<input type="text" class="form-control" id="ender" name="sender">
								</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
						<input type="submit" class="btn btn-secondary" value="Confirmer">
					</div>
				</form>
				</div>
			</div>
		</div>
	</div>


<% include partials/footer %>